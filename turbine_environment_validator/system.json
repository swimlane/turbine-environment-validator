{
  "external_mongodb": "no",
  "compute": {
    "default": [
      {
        "cpu": 8,
        "name": "single_node"
      },
      {
        "cpu": 8,
        "name": "3_node_cluster_small"
      },
      {
        "cpu": 16,
        "name": "3_node_cluster_medium"
      },
      {
        "cpu": 32,
        "name": "3_node_cluster_large"
      }
    ],
    "default_ext_mongo": [
      {
        "cpu": 4,
        "name": "single_node"
      },
      {
        "cpu": 4,
        "name": "3_node_cluster_small"
      },
      {
        "cpu": 8,
        "name": "3_node_cluster_medium"
      },
      {
        "cpu": 24,
        "name": "3_node_cluster_large"
      }
    ]
  },
  "memory": {
    "default": [
      {
        "name": "single_node",
        "ram": 8
      },
      {
        "name": "3_node_cluster_small",
        "ram": 8
      },
      {
        "name": "3_node_cluster_medium",
        "ram": 16
      },
      {
        "name": "3_node_cluster_large",
        "ram": 32
      }
    ],
    "default_ext_mongo": [
      {
        "name": "single_node",
        "ram": 4
      },
      {
        "name": "3_node_cluster_small",
        "ram": 4
      },
      {
        "name": "3_node_cluster_medium",
        "ram": 8
      },
      {
        "name": "3_node_cluster_large",
        "ram": 24
      }
    ]
  },
  "storage": {
    "type": "ssd",
    "default": [
      {
        "name": "single_node",
        "size": 600
      },
      {
        "name": "3_node_cluster_small",
        "size": 600
      },
      {
        "name": "3_node_cluster_medium",
        "size": 1024
      },
      {
        "name": "3_node_cluster_large",
        "size": 1024
      }
    ],
    "default_ext_mongo": [
      {
        "name": "single_node",
        "size": 300
      },
      {
        "name": "3_node_cluster_small",
        "size": 300
      },
      {
        "name": "3_node_cluster_medium",
        "size": 300
      },
      {
        "name": "3_node_cluster_large",
        "size": 300
      }
    ]
  },
  "os": [
    {
      "flavour": "ubuntu",
      "version": "22.04"
    },
    {
      "flavour": "ubuntu",
      "version": "20.04"
    },
    {
      "flavour": "rhel",
      "version": "7.9"
    },
    {
      "flavour": "rhel",
      "version": "8"
    },
    {
      "flavour": "centos",
      "version": "7"
    },
    {
      "flavour": "centos",
      "version": "8"
    }
  ],
  "directory": [
    {
      "minimum_size": "50",
      "path": "/"
    },
    {
      "minimum_size": "50",
      "path": "/opt"
    },
    {
      "minimum_size": "100",
      "path": "/var/lib/docker"
    },
    {
      "minimum_size": "100",
      "path": "/var/lib/kubelet"
    },
    {
      "minimum_size": "50",
      "path": "/var/openebs"
    }
  ],
  "directory_mount": [
    "/var/openebs",
    "/var/lib/docker",
    "/var/lib/kubelet",
    "/opt"
  ],
  "disallowed_executables": [
    {
      "name": "Docker",
      "value": "docker"
    },
    {
      "name": "Kubernetes Component",
      "value": "kubelet"
    },
    {
      "name": "Container CLI",
      "value": "ctr"
    },
    {
      "name": "Containerd",
      "value": "containerd"
    }
  ]
}